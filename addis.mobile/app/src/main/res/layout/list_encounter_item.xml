<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_grey"
    android:orientation="vertical" >
	
<RelativeLayout
    android:id="@+id/encounter_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/text_procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_procedure"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/text_procedure"
        android:hint="@string/general_no_value"
        android:textAppearance="?android:attr/textAppearanceLargeInverse" />

    <TextView
        android:id="@+id/text_patient_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_procedure"
        android:text="@string/general_patient_id"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/patient_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_patient_id"
        android:layout_alignBottom="@id/text_patient_id"
        android:layout_toRightOf="@id/text_patient_id"
        android:layout_marginLeft="5dp"
        android:hint="@string/general_no_value"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

    <TextView
        android:id="@+id/text_date_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_patient_id"
        android:text="@string/general_date_completed"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/date_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_date_completed"
        android:layout_alignBottom="@id/text_date_completed"
        android:layout_toRightOf="@id/text_date_completed"
        android:layout_marginLeft="5dp"
        android:hint="@string/general_no_value"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />
    <TextView
        android:id="@+id/text_upload_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_date_completed"
        android:text="@string/general_synchronized"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/upload_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_upload_status"
        android:layout_alignBottom="@id/text_upload_status"
        android:layout_toRightOf="@id/text_upload_status"
        android:layout_marginLeft="5dp"
        android:hint="@string/general_no_value"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />
	</RelativeLayout>
	
</LinearLayout>
